<script>
function setupSideAd(adId) {
  const ad = document.getElementById(adId);
  const toggle = ad.querySelector(".side-toggle");
  const content = ad.querySelector(".side-content");

  let hidden = false;
  let countdown = 10;

  const countdownInterval = setInterval(() => {
    countdown--;
    toggle.textContent = `Ad (${countdown})`;
    if (countdown <= 0) {
      clearInterval(countdownInterval);
      toggle.textContent = "‚ñ≤ Ad"; // Now uses real arrow
      toggle.classList.add("enabled");
      toggle.style.cursor = "pointer";
      toggle.addEventListener("click", () => {
        if (!hidden) {
          content.style.display = "none";
          toggle.textContent = "‚ñº Ad"; // Down arrow when collapsed
          ad.classList.add("collapsed");
          hidden = true;
        } else {
          content.style.display = "block";
          toggle.textContent = "‚ñ≤ Ad"; // Up arrow when expanded
          ad.classList.remove("collapsed");
          hidden = false;
        }
      });
    }
  }, 1000);
}

// Initialize both ads
setupSideAd("right-float-ad");
setupSideAd("left-float-ad");
</script>

